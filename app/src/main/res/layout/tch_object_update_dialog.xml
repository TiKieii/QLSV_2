<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:textSize="65px"
        android:text="Sửa Môn Học" />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_marginStart="-220dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã học kỳ :"
            android:textSize="45px"/>
        <EditText
            android:id="@+id/oj_add_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="vd : hk1_2023" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="110dp"
        android:layout_marginStart="-300dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã môn học :"
            android:textSize="45px"/>
        <EditText
            android:id="@+id/oj_add_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="vd : CTH404" />



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="160dp"
        android:layout_marginStart="-300dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên môn học"
            android:textSize="45px"/>
        <EditText
            android:id="@+id/oj_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="vd : Lập trình Android" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_marginStart="-300dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tín chỉ : "
            android:textSize="45px"/>
        <EditText
            android:id="@+id/oj_add_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="vd : 3    " />

    </LinearLayout>


    <Button
        android:id="@+id/oj_add_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-130dp"
        android:layout_marginTop="260dp"
        android:text="Thêm"/>
    <Button
        android:id="@+id/oj_add_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-250dp"
        android:layout_marginTop="260dp"
        android:text="Hủy"/>
</LinearLayout>