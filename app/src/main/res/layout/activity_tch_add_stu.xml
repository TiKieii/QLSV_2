<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tch_add_stu">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="413dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#80008000"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm Sinh Viên"
            android:textColor="@color/black"
            android:textSize="60px"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgbtn_stuin4pg_back"
            android:layout_width="62dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="-1dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_24" />

        <ImageButton
            android:id="@+id/imgbtn_stuin4pg_save"
            android:layout_width="62dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-1dp"
            android:background="@null"
            android:src="@drawable/baseline_save_24" />


    </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp">

        <ScrollView
            android:id="@+id/scoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="400dp"
                android:layout_height="600dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="00dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MSSV : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_mssv"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu đăng nhập : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_matkhau"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px" />


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_hoten"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới tính : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_gioitinh"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_ngaysinh"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content"
                        android:inputType="date" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nơi sinh : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_noisinh"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ liên lạc : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_diachi"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số hồ sơ: "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_SHSNH"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số CCCD : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_cccd"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_sdt"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_email"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã lớp : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_mlop"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã Giáo viên cố vấn : "
                        android:textSize="50px" />

                    <EditText
                        android:id="@+id/edt_addSTU_msgv"
                        android:layout_width="294dp"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </TableRow>


            </TableLayout>

        </ScrollView>
    </HorizontalScrollView>


</RelativeLayout>