<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tch_add_result"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="50dp"
        android:text="Hệ thống quản lý điểm sinh viên"
        android:textSize="55px"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="48dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSSV : "
                android:textSize="55px"
                />
            <EditText
                android:id="@+id/result_add_mssv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Sinh viên cần nhập điểm"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã môn : "
            android:textSize="55px"
            />
        <EditText

            android:id="@+id/result_add_mamon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Mã môn học cần nhập điểm"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm KTTX	  : "
            android:textSize="55px"
            />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1)"
            android:textSize="55px"
            />
        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/result_add_D1_1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="điểm hệ số 1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2)"
            android:textSize="55px"
            />
        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/result_add_D1_2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="điểm hệ số 1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(3)"
            android:textSize="55px"
            />
        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/result_add_D1_3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="điểm hệ số 1"
            />
    </LinearLayout>

</LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm KTDK	  : "
            android:textSize="55px"
            />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="numberDecimal"
                android:text="(1)"
                android:textSize="55px" />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/result_add_D2_1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="điểm hệ số 2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2)"
                android:textSize="55px"
                />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/result_add_D2_2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="điểm hệ số 2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(3)"
                android:textSize="55px"
                />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/result_add_D2_3"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:hint="điểm hệ số 1"
                />
        </LinearLayout>

    </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm Thi : "
            android:textSize="55px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1)"
            android:textSize="55px"
            />
        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/result_add_D3_1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="điểm hệ số 1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/result_caculaing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tính điểm"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_marginStart="10dp"
        android:textSize="65px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TBM : "/>
    <TextView
        android:id="@+id/result_TBM"
        android:layout_marginStart="10dp"
        android:background="#cdb4db"
        android:textSize="65px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    <TextView
        android:layout_marginStart="100dp"
        android:textSize="65px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TBHP : "/>
    <TextView
        android:id="@+id/result_TBHP"
        android:layout_marginStart="10dp"
        android:background="#cdb4db"
        android:textSize="65px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
<LinearLayout
    android:layout_marginStart="100dp"
    android:layout_marginTop="100dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/result_add_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textSize="50px"/>
    <Button
        android:layout_marginStart="10dp"
        android:id="@+id/result_add_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:textSize="50px"/>
</LinearLayout>

</LinearLayout>