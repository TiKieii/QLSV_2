<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="217dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="Xem kết quả học tập"
            android:textSize="65px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="Nhập MSSV và Mã môn cần xem" />

        <EditText
            android:id="@+id/tch_result_view_mssv_input"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:hint="MSSV" />

        <EditText
            android:id="@+id/tch_result_view_mamon_input"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:hint="Mã môn" />


        <Button

            android:id="@+id/tch_result_view_ok"
            android:layout_width="121dp"
            android:layout_height="58dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="10dp"
            android:text="OK" />

        <Button
            android:id="@+id/tch_result_view_cacel"
            android:layout_width="105dp"
            android:layout_height="58dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-60dp"
            android:text="Hủy" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>